snippet exfn "expect a function"
expect(${1:expr})to.be.a('function');
endsnippet

snippet	exfa "expect to be false"
expect($1:expr})to.be.false;
endsnippet

snippet exq
expect(${1:expr}).to.be.equal($2);
endsnippet

snippet exdq
expect(${1:expr}).to.be.deep.equal($2);
endsnippet

snippet tbt "to be true" w
to.be.true;
endsnippet

snippet tbf "to be false" w
to.be.false;
endsnippet
